{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "phases": {
      "setup": {
        "commands": [
          "corepack enable",
          "corepack prepare pnpm@latest --activate"
        ]
      },
      "install": {
        "commands": [
          "pnpm install --no-frozen-lockfile"
        ]
      },
      "build": {
        "commands": [
          "pnpm run build"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm run dev"
  }
}
